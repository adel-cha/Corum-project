{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2020",
    "module": "CommonJS",
    "types": ["vitest/globals"],
    "paths": {
      "#*": ["src/*"]
    },
    "rootDir": "./src",                 // Dossier source des fichiers TypeScript
    "outDir": "./dist", 
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"]
}
